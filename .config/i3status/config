general {
	colors = true
	interval = 1
}
order += "ipv6"
order += "wireless wlp1s0"
order += "cpu_usage"
order += "battery 0"
order += "volume master"
order += "disk /"
order += "memory"
order += "tztime local"

wireless wlp1s0{
	format_up="WiFi: %essid"
		format_down="down"
}

cpu_usage {
	format = "CPU %usage"
		max_threshold = 75
}

volume master {
	format = "â™ª: %volume"
		format_muted = "ðŸ”‡ "
		#format_muted = "â™ª: muted (%volume)"
		device = "default"
		mixer = "Master"
		mixer_idx = 0
}

battery 0 {
	format = "%status %percentage %remaining"
		low_threshold = 10
		status_bat = "ðŸ”‹"
		status_chr = "âš¡"
		last_full_capacity = true
}

tztime local {
	format = "%d-%m-%Y %I:%M:%S %p"
}

disk "/" {
	format = "%avail Free"
}

memory {
	format = "%used RAM used"
	threshold_degraded = "10%"
}
